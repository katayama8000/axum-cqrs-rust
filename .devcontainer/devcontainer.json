{
  "dockerComposeFile": [
    "../compose.yml"
  ],
  "service": "server",
  "runServices": ["server", "db", "redis", "zookeeper", "kafka", "connect"],
  "workspaceFolder": "/workspace",
  "forwardPorts": [8080, 3308, 6379, 8083, 9092, 2181],
  "portsAttributes": {
    "8080": {
      "label": "API Server"
    },
    "3308": {
      "label": "MariaDB"
    },
    "6379": {
      "label": "Redis"
    },
    "8083": {
      "label": "Kafka Connect"
    },
    "9092": {
      "label": "Kafka"
    },
    "2181": {
      "label": "Zookeeper"
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "GitHub.copilot",
        "ms-azuretools.vscode-docker",
        "rust-lang.rust-analyzer",
        "tamasfe.even-better-toml",
        "adpyke.vscode-sql-formatter",
        "fill-labs.dependi"
      ],
      "settings": {
        "files.watcherExclude": {
          "**/target/**": true
        }
      }
    }
  }
}
