{
  "dockerComposeFile": [
    "../compose.yml"
  ],
  "service": "server",
  "workspaceFolder": "/workspace",
  "forwardPorts": [8080, 3308],
  "portsAttributes": {
    "8080": {
      "label": "API Server"
    },
    "3308": {
      "label": "MariaDB"
    }
  },
  "postCreateCommand": "docker-compose -f compose.yml up -d db",
  "customizations": {
    "vscode": {
      "extensions": [
        "GitHub.copilot",
        "ms-azuretools.vscode-docker",
        "rust-lang.rust-analyzer",
        "tamasfe.even-better-toml",
        "adpyke.vscode-sql-formatter",
        "fill-labs.dependi"
      ],
      "settings": {
        "files.watcherExclude": {
          "**/target/**": true
        }
      }
    }
  }
}